{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@m3s/common": ["packages/common/src"],
      "@m3s/common/*": ["packages/common/src/*"],
      "@m3s/wallet": ["packages/wallet/src"],
      "@m3s/wallet/*": ["packages/wallet/src/*"]
    }
  },
  "exclude": ["node_modules", "**/dist"]
}