{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "declaration": true,
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": ".",
      "paths": {
        "@m3s/*": ["packages/*/src"]
      }
    },
    "include": ["packages/**/*.ts", "tests/**/*.ts", "tests/integration/config.js"],
    "exclude": ["node_modules", "dist"]
  }