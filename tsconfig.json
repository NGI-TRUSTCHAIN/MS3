{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@m3s/shared": ["packages/shared/dist"],
      "@m3s/shared/*": ["packages/shared/dist/*"],
      "@m3s/wallet": ["packages/wallet/dist"],
      "@m3s/wallet/*": ["packages/wallet/dist/*"]
    }
  },
  "ts-node": {
    "esm": true
  },
  "exclude": ["node_modules", "**/dist"]
}
