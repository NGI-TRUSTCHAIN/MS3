{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@m3s/utils": ["packages/utils/src"],
      "@m3s/utils/*": ["packages/utils/src/*"],
      "@m3s/wallet": ["packages/wallet/src"],
      "@m3s/wallet/*": ["packages/wallet/src/*"]
    }
  },
  "exclude": ["node_modules", "**/dist"]
}