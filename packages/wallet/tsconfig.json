{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS", 
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "references": [
    { "path": "../utils" }
  ],
  "include": ["src/**/*", "src/**/*.json"],
  "exclude": ["node_modules", "dist"]
}