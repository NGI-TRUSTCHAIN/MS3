{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "./dist",
    "rootDir": "../../",
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "../../",
    "paths": {
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["packages/wallet/src/**/*", "../../utils/**/*"],
  "exclude": ["node_modules"]
}