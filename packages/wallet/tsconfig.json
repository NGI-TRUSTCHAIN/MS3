{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "../../",
    "paths": {
      "@utils/*": ["utils/*"]
    }
  },
  "references": [
    { "path": "../../utils" }
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}