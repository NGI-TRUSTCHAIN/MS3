{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "./../../dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "target": "ES2020", 
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "../../",
    "paths": {
      "@utils/*": ["utils/*"]
    },
    "composite": true
  },
  "references": [
    { "path": "../../utils" }
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}