{
  "name": "m3s",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf packages/*/dist packages/*/tsconfig.tsbuildinfo",
    "build": "node --loader ts-node/esm scripts/build.ts",
    "build:registry": "node --loader ts-node/esm scripts/build.ts registry",
    "build:wallet": "node --loader ts-node/esm scripts/build.ts wallet",
    "build:crosschain": "node --loader ts-node/esm scripts/build.ts crosschain",
    "build:smartContract": "node --loader ts-node/esm scripts/build.ts smartContract",
    "publish": "node --loader ts-node/esm scripts/publish.ts",
    "publish:wallet": "node --loader ts-node/esm scripts/publish.ts wallet",
    "publish:crosschain": "node --loader ts-node/esm scripts/publish.ts crosschain",
    "publish:smartContract": "node --loader ts-node/esm scripts/publish.ts smartContract",
    "release": "npm run build && npm run publish",
    "adapter": "node --loader ts-node/esm scripts/adapter.ts integrate wallet",
    "adapter:wallet": "node --loader ts-node/esm scripts/adapter.ts integrate wallet",
    "adapter:crosschain": "node --loader ts-node/esm scripts/adapter.ts integrate crosschain",
    "adapter:smartContract": "node --loader ts-node/esm scripts/adapter.ts integrate smartContract"
  },
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@types/sinon-chai": "^3.2.3",
    "babel-loader": "^10.0.0",
    "ethereum-waffle": "^4.0.10",
    "ethers": "^6.13.5",
    "hardhat": "^2.22.19",
    "path-browserify": "^1.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "peerDependencies": {
    "@web3auth/auth-adapter": "^9.7.0",
    "@web3auth/base": "^9.7.0",
    "@web3auth/ethereum-provider": "^9.7.0",
    "@web3auth/no-modal": "^9.7.0"
  },
  "peerDependenciesMeta": {
    "@web3auth/auth-adapter": {
      "optional": true
    },
    "@web3auth/base": {
      "optional": true
    },
    "@web3auth/ethereum-provider": {
      "optional": true
    },
    "@web3auth/no-modal": {
      "optional": true
    }
  },
  "dependencies": {
    "vitest": "^3.0.9"
  }
}
