{
  "name": "m3s",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf packages/*/dist packages/*/tsconfig.tsbuildinfo",
    
    "build": "node scripts/build-all.js",
    "build:utils": "node scripts/build-package.js utils",
    "build:wallet": "node scripts/build-package.js wallet", 
    "build:crosschain": "node scripts/build-package.js crosschain",
    "build:smartContract": "node scripts/build-package.js smartContract",
    
    "publish:utils": "node scripts/publish-package.js utils",
    "publish:wallet": "node scripts/publish-package.js wallet",
    "publish:crosschain": "node scripts/publish-package.js crosschain",
    "publish:smartContract": "node scripts/publish-package.js smartContract",
    "publish:all": "node scripts/publish-all.js",
    
    "release": "npm run build && npm run publish:all",
    
    "test": "cd tests && npm run test",
    "build:integration": "cd tests && npm run build:integration",
  
    "merge-adapter": "node scripts/mergeHelper.js"
  },
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@types/sinon-chai": "^3.2.3",
    "babel-loader": "^10.0.0",
    "ethereum-waffle": "^4.0.10",
    "hardhat": "^2.22.19",
    "path-browserify": "^1.0.1",
    "typescript": "^4.9.5",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "ethers": "^6.13.5",
    "@web3auth/auth-adapter": "^9.7.0",
    "@web3auth/base": "^9.7.0",
    "@web3auth/ethereum-provider": "^9.7.0",
    "@web3auth/no-modal": "^9.7.0"
  }
}
