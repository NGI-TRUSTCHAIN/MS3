{
  "name": "tests",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "test": "node run-unit-tests.js",
    "test:unit": "node run-unit-tests.js",
    "test:wallet": "node run-unit-tests.js wallet",
    "test:crosschain": "node run-unit-tests.js crosschain",
    "test:smartContract": "node run-unit-tests.js smartContract",
    
    "build:integration": "webpack --config webpack.conf.cjs",
    "test:integration": "npx playwright test integration",
    "test:integration:debug": "npx playwright test integration --headed --debug",
    "test:web3auth": "npx playwright test integration/wallet/02__web3auth.spec.ts",
    "test:evmwallet": "npx playwright test integration/wallet/01__evmWallet.spec.ts",
    
    "test:all": "npm run test && npm run test:integration"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.0",
    "@types/chai": "^5.0.0",
    "@types/mocha": "^10.0.10",
    "chai": "^5.2.0",
    "glob": "^11.0.1",
    "mocha": "^11.1.0",
    "playwright": "^1.42.0",
    "sinon": "^19.0.2",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  }
}