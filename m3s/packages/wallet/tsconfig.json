{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src", // Keeps your dist output as dist/index.js from src/index.ts
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true // If this package is part of a composite project build
  },
  "include": ["src/**/*"], // Only include src for the tsc build
  "exclude": [
    "node_modules",
    "dist",
    "tests" // Explicitly exclude tests from this build config
  ],
  "references": [
    { "path": "../shared" } // If shared is a build dependency
  ]
}
