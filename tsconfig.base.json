{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@m3s/utils": ["packages/utils/dist"],
      "@m3s/utils/*": ["packages/utils/dist/*"],
      "@m3s/wallet": ["packages/wallet/dist"],
      "@m3s/wallet/*": ["packages/wallet/dist/*"]
    }
  },
  "exclude": ["node_modules", "**/dist"]
}